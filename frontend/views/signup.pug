div(style={
    'height':'100%',
    'display':'flex',
    'flex-wrap':'wrap',
    'justify-content':'center',
    'align-items':'center'
})
    form(method="post"
        action="/signup"
        style={margin: '0 auto 0',
            'flex':'0 0 80%',
            'display':'flex',
            'align-items':'center',
            'justify-content':'center',
            'flex-wrap':'wrap'
        })
        input.form-control.signup-input(type="text"
            name="email"
            placeholder="email")
        input.form-control.signup-input(type="text"
            name="username"
            placeholder="username")
        input.form-control.signup-input(type="password"
            name="pw"
            placeholder="password")
        input.form-control.signup-input(type="submit"
            value="Create Account")
